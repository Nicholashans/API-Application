<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.RestaurantReview" parent="Theme.Material3.DayNight">
        <item name="colorPrimary">@color/gray_light</item>
        <item name="colorOnPrimary">@color/orange_light</item>

        <item name="colorSecondary">@color/orange_light</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Theme.RestaurantReview" parent="Base.Theme.RestaurantReview" >
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/gray_light</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/githublogoblack500</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.RestaurantReview</item>
    </style>
</resources>